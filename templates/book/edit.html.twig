{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
    <h1>Edit Book</h1>
    <div class="container create">
        <form action="{{ path('book_update', {id: book.id}) }}" method="POST">
            <div class="new">
                <label for="book_title">Title:</label> 
                <input type="text" name="book_title" value="{{book.title}}" id="book_title">
            </div>
            <div class="new">
                <label for="book_isbn">ISBN:</label>
                <input type="text" name="book_isbn" value="{{book.isbn}}" id="book_isbn">
            </div>
            <div class="new">
                <label for="book_pages">Pages:</label>
                <input type="text" name="book_pages" value="{{book.pages}}" id="book_pages"></div>
            <div class="new">
                <label for="summernote">About:</label> 
                <textarea name="book_about" id="summernote">{{book.about}}</textarea>
            </div>
            <div class="new">
                <label for="book_author">Author:</label>
                <select name="books_author" id="book_author">
                    {% for author in authors %}
                        <option value="{{author.id}}"{% if author.id == book.authorId %} selected {% endif %}>
                        {{author.name}} {{author.surname}}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <button class="submit-btn create" type="submit">Edit Book</button>
            <input type="hidden" name="token" value="{{csrf_token('')}}"/>
        </form>
    </div>
{% endblock %}
