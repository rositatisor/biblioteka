<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="http://localhost/biblioteka/public/build/app.css" rel="stylesheet">
        <link href="{{asset('css/reset.css')}}" rel="stylesheet">
        <link href="{{asset('css/main.css')}}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">  
        <script src="http://localhost/biblioteka/public/build/app.js" defer></script>
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% if errors is defined and errors|length > 0%}
            {% include 'msg/validation.html.twig'%}
        {% endif %}
        {% if success is defined and success|length > 0%}
            {% include 'msg/success.html.twig'%}
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
